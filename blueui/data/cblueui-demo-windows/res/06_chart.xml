<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<UI size="1100,700">
	<VLayout name="root" Layout="fill,fill" interval='2'>
		<Control Class="CLabelUI" DesignerClass="CLabelUI" position="0,0,100,100" Name="title" Layout="fill,40" back-show="always" text-align="hcenter|vcenter" text="tr:统计图表"/>

		<Control Class="CContainOptionUI" position="0,0,100,100" Name="tab" Layout="fill,fill" contain-layout="box-type:vertical" back-show="always" text="tr:标签页">
			<hLayout Layout="fill,30" interval='1' cross-offset="8">
				<Control Class="COptionUI" TEXT="tr:总览" Name="btnchar01" cmd="showcontrol(mainchartPage,isSelect(btnchar01));" selected="true" Layout="adapt:10,fill"/>
				<Control Class="COptionUI" TEXT="tr:折线柱状图" Name="btnchar02" cmd="showcontrol(linechartPage,tab_bar_set,isSelect(btnchar02));" shortcut="ctrl+1" Layout="adapt:10,fill"/>
				<Control Class="COptionUI" TEXT="tr:K线图" Name="btnchar03" cmd="showcontrol(klinePage,tab_bar_set,isSelect(btnchar03));" shortcut="ctrl+2" Layout="adapt:10,fill"/>
				<Control Class="COptionUI" TEXT="tr:平行线图" Name="btnchar04" cmd="showcontrol(parallelPage,tab_bar_set,isSelect(btnchar04));" shortcut="ctrl+3" Layout="adapt:10,fill"/>
				<Control Class="COptionUI" TEXT="tr:散点图" Name="btnchar05" cmd="showcontrol(scatterPage,tab_bar_set,isSelect(btnchar05));" shortcut="ctrl+4" Layout="adapt:10,fill" />
				<Control Class="COptionUI" TEXT="tr:饼图" Name="btnchar06" cmd="showcontrol(piePage,tab_bar_set,isSelect(btnchar06));" shortcut="ctrl+5" Layout="adapt:10,fill"/>
				<Control Class="COptionUI" TEXT="tr:极坐标图表" Name="btnchar07" cmd="showcontrol(radarPage,tab_bar_set,isSelect(btnchar07));" shortcut="ctrl+6" Layout="adapt:10,fill"/>
				<Control Class="COptionUI" TEXT="tr:树分布图" Name="btnchar08" cmd="showcontrol(TreePage,isSelect(btnchar08));" shortcut="ctrl+7" Layout="adapt:10,fill"/>
				<Control Class="COptionUI" TEXT="tr:关系图表" Name="btnchar09" cmd="showcontrol(NetPage,isSelect(btnchar09));" shortcut="ctrl+8" Layout="adapt:10,fill"/>
				<Control Class="COptionUI" TEXT="tr:三元图表" Name="btnchar10" cmd="showcontrol(TrianglePage,isSelect(btnchar10));" shortcut="ctrl+9" Layout="adapt:10,fill"/>
				<Control Class="COptionUI" TEXT="tr:表盘图表" Name="btnchar11" cmd="showcontrol(dialPage,isSelect(btnchar11));" shortcut="ctrl+a" Layout="adapt:10,fill"/>
				<Control Class="COptionUI" TEXT="tr:地图" Name="btnchar12" cmd="showcontrol(geoPage,isSelect(btnchar12));" shortcut="ctrl+b" Layout="adapt:10,fill"/>
				<Control Class="COptionUI" TEXT="tr:3D Plot" Name="btnchar13" cmd="showcontrol(plotPage,isSelect(btnchar13));" shortcut="ctrl+b" Layout="adapt:10,fill"/>
				<Control Class="COptionUI" TEXT="tr:飞控仪表" Name="btnchar14" cmd="showcontrol(attitudePage,isSelect(btnchar14));" shortcut="ctrl+b" Layout="adapt:10,fill"/>
				<Control Class="CButtonGradientUI" TEXT="tr:添加" Name="btnCharAdd" back-gradient-normal="bru_btnblue_nor12" control-flags="DisableTheme,RoundRadiusParl" text-colors="normal:0xFFFFFF" round-radius="left-top:15,0;right-top:0,0;right-bottom:-15,0;left-bottom:0,0;" Layout="adapt:30,fill" Icon="button:add" text-align="center|vcenter"/>
			</hLayout>

			<Control Class="CContainLayoutUI" Name="tab_bar_set" Layout="fill,adapt" interval="2" contain-layout="box-type:vertical" back-show="always" visible="false">
				<hLayout Layout="fill,26" interval="2">
					<Control Class="CLabelUI" position="0,0,100,100" Name="title" Layout="85,fill:40" text="Axes Cross"/>
					<Control Class="CComboListUI" Name="AxesCross" cursel="0" input-type="ReadOnly" border-show="always" Layout="180,fill">
						<element TextID='0' TEXT="0-based" selected="true"/>
						<element TextID='1' TEXT ="Maximum Values"/>
						<element TextID='2' TEXT ="Minimum Values"/>
						<element TextID='3' TEXT ="Custom (X=25,Y=50)"/>
					</Control>
					<Control Class="CCheckBoxUI" Name="chkDataLabel" Layout="160,fill" selected="false" Margin="{15,0,5,0}" TEXT="Show Data Label"/>
					<Control Class="CCheckBoxUI" Name="chkFillPath" Layout="160,fill" selected="true" Margin="{15,0,5,0}" TEXT="Show Line Back"/>
					<Control Class="CCheckBoxUI" Name="chkTestLine" Layout="160,fill" selected="false" Margin="{15,0,5,0}" TEXT="Test Line"/>
				</hLayout>

				<hLayout Layout="fill,26" interval="2">
					<Control Class="CLabelUI" position="0,0,100,100" Name="title" Layout="85,fill:40" text="Line"/>
					<Control Class="CComboListUI" Name="Line" cursel="0" input-type="ReadOnly" border-show="always" Layout="120,fill">
						<element TextID='1' TEXT ="Step"/>
						<element TextID='2' TEXT ="Line"/>
						<element TextID='3' TEXT ="Spline"/>
					</Control>

					<Control Class="CLabelUI" position="0,0,100,100" Name="title" Layout="70,fill:40" text="Marker"/>
					<Control Class="CComboListUI" Name="Marker" cursel="0" input-type="ReadOnly" border-show="always" Layout="120,fill">
						<element TextID='0' TEXT ="No Mark"/>
						<element TextID='1' TEXT ="Triangle"/>
						<element TextID='2' TEXT ="Triangle Down"/>
						<element TextID='3' TEXT ="Triangle Left"/>
						<element TextID='4' TEXT ="Triangle Right"/>
						<element TextID='5' TEXT ="Rect"/>
						<element TextID='6' TEXT ="Circle"/>
						<element TextID='7' TEXT ="Diamond"/>
						<element TextID='8' TEXT ="Cross"/>
						<element TextID='9' TEXT ="Star"/>
					</Control>
				</hLayout>

				<hLayout Layout="fill,26" interval="2">
					<Control Class="CLabelUI" position="0,0,100,100" Name="title" Layout="85,fill:40" text="Style"/>
					<Control Class="CComboListUI" Name="Style" cursel="0" input-type="ReadOnly" border-show="always" Layout="120,fill">
						<element TextID='0' TEXT ="Solid"/>
						<element TextID='1' TEXT ="Dash"/>
						<element TextID='2' TEXT ="Dot"/>
						<element TextID='3' TEXT ="Dash Dot"/>
						<element TextID='4' TEXT ="Dash Dot Dot"/>
					</Control>

					<Control Class="CLabelUI" position="0,0,100,100" Name="title" Layout="70,fill:40" text="Size"/>
					<Control Class="CComboListUI" Name="Size" cursel="0" input-type="ReadOnly" border-show="always" Layout="120,fill">
						<element TextID='7' TEXT ="7"/>
						<element TextID='10' TEXT ="10"/>
						<element TextID='15' TEXT ="15"/>
						<element TextID='20' TEXT ="20"/>
						<element TextID='50' TEXT ="50"/>
					</Control>
				</hLayout>

				<hLayout Layout="fill,26" interval="2">
					<Control Class="CLabelUI" position="0,0,100,100" Name="title" Layout="85,fill:40" text="width"/>
					<Control Class="CComboListUI" Name="Width" cursel="0" input-type="ReadOnly" border-show="always" Layout="120,fill">
						<element TextID='1' TEXT ="1 pixel"/>
						<element TextID='2' TEXT ="2 pixels"/>
						<element TextID='3' TEXT ="3 pixels"/>
						<element TextID='4' TEXT ="4 pixels"/>
						<element TextID='5' TEXT ="5 pixels"/>
					</Control>

					<Control Class="CLabelUI" position="0,0,100,100" Name="title" Layout="70,fill:40" text="LabelAngle"/>
					<Control Class="CComboListUI" Name="LabelAngle" cursel="0" input-type="ReadOnly" border-show="always" Layout="120,fill">
						<element TextID='90' TEXT ="90°"/>
						<element TextID='45' TEXT ="45°"/>
						<element TextID='0' TEXT ="0°"/>
						<element TextID='-45' TEXT ="-45°"/>
						<element TextID='-90' TEXT ="-90°"/>
					</Control>
				</hLayout>
			</Control>

			<LayeredLayout Layout="fill,fill" cursel="0">
				<Control Class="CContainLayoutUI" Name="mainchartPage" Layout="fill,fill" interval="2" contain-layout="box-type:vertical" back-show="always" back-colors="normal:0xEEEEEE;highlight:0xEEEEEE;selected:0xF7F7F7;">

					<include file=".././res/06_chart_sub_main.xml"/>
				</Control>
				<Control Class="CChartViewUI" name="linechartPage" Layout="fill:300,fill:400" chart-padding="50,50,50,50" datafile=".././res/06_chart_data_line.xml"/>
				<Control Class="CChartViewUI" name="klinePage" Layout="fill:300,fill:400" chart-padding="50,50,50,50" datafile=".././res/06_chart_data_kline.xml"/>
				<Control Class="CChartViewUI" name="parallelPage" Layout="fill:300,fill:400" chart-padding="50,50,50,50" datafile=".././res/06_chart_data_parallel.xml"/>
				<Control Class="CChartViewUI" name="scatterPage" Layout="fill:300,fill:400" chart-padding="50,50,50,50" datafile=".././res/06_chart_data_scatter.xml"/>
				<Control Class="CChartViewUI" name="piePage" Layout="fill:300,fill:400" chart-padding="50,50,50,50" datafile=".././res/06_chart_data_pie.xml"/>
				<Control Class="CChartViewUI" name="radarPage" Layout="fill:300,fill:400" chart-padding="50,50,50,50" datafile=".././res/06_chart_data_radar.xml"/>
				<Control Class="CChartViewUI" name="TreePage" Layout="fill:300,fill:400" chart-padding="50,50,50,50" datafile=".././res/06_chart_data_tree.xml"/>
				<Control Class="CChartViewUI" name="NetPage" Layout="fill:300,fill:400" chart-padding="50,50,50,50" datafile=".././res/06_chart_data_net.xml"/>
				<!--back-show="always" back-colors="normal:0x5AAC44"-->
				<Control Class="CChartViewUI" name="TrianglePage" Layout="fill:300,fill:400" chart-padding="50,50,50,50" datafile=".././res/06_chart_data_triangle.xml"/>
				<Control Class="CChartViewUI" name="dialPage" Layout="fill:300,fill:400" chart-padding="50,50,50,50" datafile=".././res/06_chart_data_dial.xml"/>
				<Control Class="CChartViewUI" name="geoPage" Layout="fill:300,fill:400" chart-padding="50,50,50,50" datafile=".././res/06_chart_data_geo.xml">
					<Spacer Layout="160,26"/>
					<Control Class="CCheckBoxUI" Name="chkWeatherMark" Layout="adapt:20,26" selected="true" Margin="15,0,5,0" TEXT="tr:展示标记/天气/交通情况"/>
					<Spacer Layout="160,26"/>
					<Control Class="CCheckBoxUI" Name="chkhotlayer" Layout="adapt:20,26" selected="true" Margin="15,0,5,0" TEXT="tr:热力图层"/>
				</Control>
				<Control Class="CChartViewUI" name="plotPage" Layout="fill:300,fill:400" chart-padding="50,50,50,50" datafile=".././res/06_chart_data_plot.xml">
					<Spacer Layout="160,26"/>
					<Control Class="CLabelUI" Layout="adapt:20,26" selected="true" Margin="15,0,5,0" TEXT="tr: 纯软件实现3D Math，可移植到CPU，ARM，MCU任意设备"/>
				</Control>

				<Control Class="CContainLayoutUI" Name="attitudePage" Layout="fill,fill" interval="2" contain-layout="box-type:vertical;padding:50,50,50,50">		
					<Vlayout Layout="400,90" layout-align="hcenter">
						<Control Class="CLabelUI" text="tr:飞控姿态表盘可视化控件参数设置" Layout="fill,30"/>
						<hLayout Layout="fill,30">
							<Control Class="CLabelUI" text="tr:Bank角度[-30~30]:" Layout="120,fill"/>
							<Control Class="CSliderUI" Name="angle_bank" select-model="max" Range="[-30,30]" value="10" Layout="300,fill" tickstyle="none"/>
						</hLayout>
						<hLayout Layout="fill,30">
							<Control Class="CLabelUI" text="tr:Pitch角度[-20~20]:" Layout="120,fill"/>
							<Control Class="CSliderUI" Name="angle_pitch" select-model="max" Range="[-20,20]" value="5" Layout="300,fill" tickstyle="none" />
						</hLayout>					
					</Vlayout>
					<Control Class="CChartViewUI" name="attitudeChart" Layout="fill:300,fill:400" font="1"  datafile=".././res/06_chart_data_attitude_indicator.xml"/>
				</Control>
			</LayeredLayout>
		</Control>

	</VLayout>
</UI>