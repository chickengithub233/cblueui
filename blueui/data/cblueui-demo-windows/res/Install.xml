<?xml version="1.0" encoding="utf-8"?>
<UI size="600,400">
    <Control Class="CContainLayoutUI" Name="main_container" Layout="fill,fill" padding="0,0,0,0" contain-flags="DragMoveWidget,MainContain"  back-show="always" border-show="never" back-colors="normal:0x3AD272;highlight:0x3AD272;selected:0x3AD272;" icon="bkimage_test">
        <Hlayout Layout="fill,30" padding="2,0,2,0">
            <Control Class="CImageCtrl" Name="cap_icon" icon="60" Layout="30,fill"/>
            <Control Class="CLabelUI" position="{0,0,100,100}" Name="title" Layout="fill,fill" text="XXX公司" control-flags="use-par-color-text"/>
            <Spacer Layout="30,fill"/>
            <Control Class="CButtonSysUI" Name="minbtn" Layout="30,fill:25" sysType="min" control-flags="use-par-color-text"/>
            <Control Class="CButtonSysUI" Name="closebtn" Layout="30,fill:25" sysType="hide" control-flags="use-par-color-text"/>
        </Hlayout>
        <Spacer Layout="fill,fill"/>
        <Hlayout Layout="fill,50">
            <Spacer Layout="fill,fill"/>
            <Control Class="CButtonUI" Name="btnInstall" text="快速安装" Margin="{0,0,15,0}" Layout="200,fill" back-show="always" disabled="false"/>
            <Spacer Layout="fill,fill"/>
        </Hlayout>
        <Spacer Layout="fill,20"/>

        <Control Class="CContainLayoutUI" Name="tab_main_container" Layout="fill,fill" layout-method="Layered" cursel="0" padding="0,0,0,0" contain-flags="DragMoveWidget" back-show="always" icon="bkimage_test">
            <vlayout padding="10,0,10,0">
                <Spacer Layout="fill,fill"/>
                <Hlayout Layout="fill,50" interval='2'>
                    <Control Class="CCheckBoxUI" Name="destop_link" Layout="20,30" font="0" />
                    <Control Class="CLabelUI" TEXT="生成桌面快捷方式" font="0" back-show="none" border-show="false" Layout="adapt,30" ontrol-flags="use-par-color-text" text-align="left|vcenter"/>
                    <Spacer Layout="20,fill"/>
                    <Control Class="CCheckBoxUI" Name="quick_link" Layout="20,30" font="0" />
                    <Control Class="CLabelUI" TEXT="添加到快速启动栏" font="0" back-show="none" border-show="false" Layout="adapt,30" ontrol-flags="use-par-color-text" text-align="left|vcenter"/>
                    <Spacer Layout="20,fill"/>
                    <Control Class="CCheckBoxUI" Name="auto_run" Layout="20,30" font="0" />
                    <Control Class="CLabelUI" TEXT="开机自动启动" font="0" back-show="none" border-show="false" Layout="adapt,30" ontrol-flags="use-par-color-text" text-align="left|vcenter"/>
                </Hlayout>
                <Hlayout Layout="fill,28" interval='10'>
                    <Control Class="CLabelUI" text="安装位置" Layout="adapt,fill" text-align="left|vcenter" ontrol-flags="use-par-color-text" />
                    <Control Class="CEditTextUI" Layout="fill,fill" name="input_install_dir" input-range="0,100000" border-show="always" />
                    <Control Class="CButtonUI" Name="btnSelectDir" text="浏览" Margin="{0,0,15,0}" Layout="60,fill" back-show="none" border-show="always"  ontrol-flags="use-par-color-text"/>
                </Hlayout>
                <Hlayout Layout="fill,50">
                    <Control Class="CCheckBoxUI" Align="bottom" Name="readLicence" Layout="20,30" font="0" />
                    <Control Class="CLabelUI" Align="bottom" TEXT="阅读并同意" font="0" back-show="none" border-show="false" Layout="adapt:5,30" text-align="left|vcenter" />
                    <Control Class="CButtonUI" Align="bottom" TEXT="用户许可协议和隐私条款" font="0" Name="openLicence" back-show="none" border-show="false" Layout="adapt:10,30" text-colors="normal:0xE5AA3D;highlight:0xE5AA3D;selected:0xE5AA3D;" text-align="left|vcenter"/>
                    <Control Class="CLabelUI" Align="bottom" name="disk_need_space" TEXT="" font="0" back-show="none" border-show="false" Layout="adapt,30"  text-align="left|vcenter" ontrol-flags="use-par-color-text"/>
                    <Control Class="CLabelUI" Align="bottom" name="disk_space" TEXT="" font="0" back-show="none" border-show="false" Layout="adapt,30"  text-align="left|vcenter" ontrol-flags="use-par-color-text"/>
                    <Control Class="CLabelUI" Align="bottom" name="disk_space_error" TEXT="磁盘空间不足" font="0" back-show="none" border-show="false" Layout="adapt,30" text-colors="normal:0x124578;highlight:0x2B2BF9;selected:0x2B2BF9;" text-align="left|vcenter"/>
                </Hlayout>
            </vlayout>

            <vlayout padding="2,0,2,0">
                <Control Class="CLabelUI" Align="bottom" TEXT="正在安装..." font="0" back-show="none" border-show="false" Layout="100,30"  text-align="left|vcenter"/>
                <Control Class="CProgressBarUI" Name="installProgress" Layout="fill,20" Margin="{1,0,1,0}" value="0" fillsize="10"/>
            </vlayout>

            <vlayout padding="2,0,2,0">
                <Control Class="CLabelUI" Align="bottom" TEXT="完成安装" font="0" back-show="none" border-show="false" Layout="100,30"  text-align="center|vcenter"/>
            </vlayout>
        </Control>
    </Control>
</UI>